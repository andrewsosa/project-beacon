<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="177dp"
    android:paddingBottom="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView4"
            android:src="@drawable/drawer_background"
            android:scaleType="center" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/user_picture"
                android:src="@drawable/ic_person"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:layout_centerVertical="true"
                android:focusableInTouchMode="false"
                android:background="@drawable/drawer_avatar_background"
                android:cropToPadding="true"
                android:padding="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="andrewsosa001@gmail.com"
                android:id="@+id/drawerEmail"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="false"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif-regular"
                android:textColor="@color/secondaryTextLight"
                android:layout_alignParentBottom="true"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Andrew Sosa"
                android:id="@+id/drawerUsername"
                android:layout_above="@+id/drawerEmail"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/primaryTextLight"
                android:layout_marginBottom="2dp"
                android:fontFamily="sans-serif-medium" />


        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>